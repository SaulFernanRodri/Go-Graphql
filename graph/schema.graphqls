type User {
  id: ID!
  name: String!
  email: String!
  password: String!
  activate: Boolean!
}

input NewUserInput {
  name: String!
  email: String!
  password: String!
  activate: Boolean!
}

type Query {
  all: [User!]!
  find(id: ID!): User
  findByEmail(email: String!): User
}

type Mutation {
  createUser(input: NewUserInput): User!
  updateUser(id: ID!, name: String!, email: String!): User!
  deleteUser(id: ID!): User!
}

type Subscription {
  userCreated: User!
}